<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>orbit</role-hint>
            <implementation>
                org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <phases>   
                    <validate>org.eclipse.jetty.toolchain:jetty-orbit-maven-plugin:validate</validate>           
                	<generate-sources>org.eclipse.jetty.toolchain:jetty-orbit-maven-plugin:prepare-javadoc</generate-sources>
                    <process-sources>org.apache.maven.plugins:maven-javadoc-plugin:javadoc,org.eclipse.jetty.toolchain:jetty-orbit-maven-plugin:process-javadoc</process-sources>
                    <package>org.eclipse.jetty.toolchain:jetty-orbit-maven-plugin:orbitify</package>
                    <install>org.apache.maven.plugins:maven-install-plugin:install</install>
                    <verify>org.apache.maven.plugins:maven-gpg-plugin:sign</verify>
                    <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
                   
                </phases>
            </configuration>
        </component>
    </components>
</component-set>
